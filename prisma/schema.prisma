generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model Character {
  id          Int      @id @default(autoincrement())
  name        String
  gender      String
  pictureName String
  records     Record[]
}

model Record {
  id          Int       @id @default(autoincrement())
  combo       Int
  score       Int
  characterId Int
  character   Character @relation(fields: [characterId], references: [id])

  @@index([characterId])
}
